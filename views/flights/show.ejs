<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1> <%=title %> </h1>
  <section>
    <div>Flight #:</div>
    <div>
      <%= flight._id %>
      <div>
        <%= flight.airline %>
        <a href="/flights/<%= flight._id %>/edit">
          <button>Edit Flight</button>
        </a>
      </div>
      <div>Airport: <%= flight.airport %></div>
      <div>Flight Number: <%= flight.flightNo %></div>
      <div>Departure: <%= flight.departs %></div>
    <div>Food:</div>
    <ul>
      <% flight.food.forEach(foodItem => { %>
        <li><%= foodItem.name %> </li>
      <% }) %> 
    </ul>
  </section>
    
  <%# add to meals form below this comment %>
  <form id="add-meal-to-food" action="/flights/<%= flight._id %>/meals" method="POST">
    <select name="mealId">
      <% meals.forEach(meal => { %>
        <option value="<%= meal._id %>"><%= meal.name %> </option>
      <% }) %> 
    </select>
    <button type="submit">Add to Food</button>
  </form> 
  <h2>Tickets</h2>
  <form 
    id="add-ticket-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="seat-input">Seat:</label>
    <input type="text" name="seat" id="seat-input" required pattern="[A-F][1-9]\d?">
    <label for="price-input">Price:</label>
    <input type="number" name="price" id="price-input">
    <button type="submit">Add Ticket</button>
  </form>
  <% if(flight.tickets.length) { %> 
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.createdAt.toLocaleDateString() %> </td>
            <td><%= ticket.seat %> </td>
            <td><%= ticket.price %> </td>
          </tr>
        <% }) %> 
      </tbody>
    </table>
  <% } else { %> 
    <h3>No Tickets Yet</h3>
  <% } %> 
</main>

  <%- include('../partials/footer') %>
